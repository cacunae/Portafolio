<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evaluacion01"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Evaluacion01.listadoContrato"
        mc:Ignorable="d"
        Title="Contratos" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/evento.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="gridcontrato" HorizontalAlignment="Left" Height="190" Margin="80,200,0,0" VerticalAlignment="Top" Width="673">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFF11111" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
        <Button  HorizontalAlignment="Left" Margin="80,101,0,0" VerticalAlignment="Top" Width="75" Height="79" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="Imagenes/relog.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnFiltrar" Content="filtrar" HorizontalAlignment="Left" Margin="175,132,0,0" VerticalAlignment="Top" Width="75" Click="btnFiltrar_Click"/>
        <ComboBox x:Name="cbEstado"  HorizontalAlignment="Left" Margin="175,101,0,0" VerticalAlignment="Top" Width="120" />

    </Grid>
</Window>
